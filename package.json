{
  "name": "graphql-stitching-sample",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run copy:schemas && concurrently -k 'npm:server:*' 'tsc --watch --incremental'",
    "copy:schemas": "copyfiles src/schemas/*.graphql dist/schemas --flat",
    "build": "npm run generate:types && tsc",
    "server:product": "nodemon dist/product.js",
    "server:pricing": "nodemon dist/pricing.js",
    "server:gateway": "nodemon dist/gateway.js",
    "generate:types": "graphql-codegen --config codegen.yml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@apollo/federation": "^0.33.3",
    "@apollo/gateway": "^0.42.3",
    "apollo-server": "^3.4.0",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/typescript": "^2.3.0",
    "@graphql-codegen/typescript-resolvers": "^2.4.0",
    "concurrently": "^6.0.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.7",
    "typescript": "^4.4.4"
  }
}
